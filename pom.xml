<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>br.com.smc</groupId>
	<artifactId>fluentd4log4j</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>

	<name>Fluentd Log4j Appender</name>
	<description>Integration between fluentd and log4j</description>

	<properties>
		<log4j.version>1.2.17</log4j.version>
		<fluentd.version>0.3.4</fluentd.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.fluentd</groupId>
			<artifactId>fluent-logger</artifactId>
			<version>${fluentd.version}</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>
	</dependencies>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<url>https://github.com/savio/fluentd4log4j</url>

	<scm>
		<connection>scm:git:git@github.com:savio/fluentd4log4j.git</connection>
		<developerConnection>scm:git:git@github.com:savio/fluentd4log4j.git</developerConnection>
		<url>git@github.com:savio/fluentd4log4j.git</url>
	</scm>

	<developers>
		<developer>
			<id>tuxetuxe</id>
			<name>Luis Santos</name>
			<email>luis.santos+fluentd4log4j@twimba.com</email>
			<organizationUrl>https://github.com/tuxetuxe</organizationUrl>
		</developer>
	</developers>

	<organization>
		<name>Twimba</name>
	</organization>
</project>
